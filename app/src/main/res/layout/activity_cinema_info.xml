<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_186"
        android:src="@drawable/bg_movie" />
    <RelativeLayout
        android:paddingTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dp_24"
        android:paddingRight="@dimen/dp_24"
        android:layout_height="@dimen/dp_85">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/cinema_logo"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:layout_toRightOf="@id/cinema_logo"
            android:paddingLeft="@dimen/dp_20">

            <TextView
                android:id="@+id/cinema_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="影院名称"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/cinema_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="影院地址"
                android:layout_below="@id/cinema_name"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/showInfo"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:background="#999999"
                android:layout_centerVertical="true"
                android:src="@drawable/com_icon_collection_default"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </RelativeLayout>
    

    <recycler.coverflow.RecyclerCoverFlow
        android:id="@+id/recycleRotate"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_223"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_85">

    </recycler.coverflow.RecyclerCoverFlow>


    <View
        android:id="@+id/line"
        android:layout_width="@dimen/dp_312"
        android:layout_height="3dp"
        android:layout_below="@id/recycleRotate"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_999999_e8175e_440a33">
    </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/dp_24"
        android:paddingRight="@dimen/dp_24"
        android:layout_below="@id/line">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/movieOptionList"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
    <!--弹出详情评论信息-->
    <RelativeLayout
        android:id="@+id/alertLayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="467dp"
        android:layout_alignParentBottom="true"
        android:paddingTop="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_24"
        android:paddingRight="@dimen/dp_24"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_20">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                android:layout_marginRight="115dp"
                android:text="详情"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                android:text="评论"/>
        </LinearLayout>


    </RelativeLayout>



</RelativeLayout>

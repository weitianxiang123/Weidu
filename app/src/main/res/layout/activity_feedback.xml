<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.FeedbackActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_30"
        android:text="意见反馈"
        android:textColor="#333333"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="@dimen/dp_312"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/version_ed"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_64"
            android:background="@drawable/version_ed_bg"
            android:hint="写下您对产品的感受吧！工作人员将会在第一时间评估处理。"
            android:textSize="@dimen/sp_10" />

        <Button
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentRight="true"
            android:layout_below="@id/version_ed"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/shape_e8175e_440a33"
            android:text="提交"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </RelativeLayout>

    <include layout="@layout/include_finish_this" />
</LinearLayout>
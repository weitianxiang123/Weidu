<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SelectSeatActivity">


    <RelativeLayout
        android:id="@+id/layoutHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_movie">

        <TextView
            android:id="@+id/textMessage"
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_26"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_60"
            android:background="#30ffffff"
            android:gravity="center"
            android:text="哈哈哈"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@id/textMessage"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_30"
            android:visibility="gone"
            >

            <View
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:background="#000000"></View>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可选"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></View>

            <View
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:background="#000000"></View>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选中"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></View>

            <View
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:background="#000000"></View>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已售"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></View>

            <View
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:background="#000000"></View>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最佳观影区"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </RelativeLayout>

    <com.bw.movie.cview.SeatTable
        android:id="@+id/seatView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_73"
        android:layout_below="@id/layoutHead"
        android:layout_marginTop="@dimen/dp_f50"
       />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_73"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:background="#f0f"
        >
<TextView
    android:id="@+id/textTotal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="合计:"
    android:textSize="@dimen/sp_14"
    android:textColor="#333333"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="@dimen/dp_20"
    android:layout_marginLeft="@dimen/dp_34"

    />
        <TextView
            android:id="@+id/textFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:textColor="#666666"
            android:text="￥"
            android:layout_toRightOf="@id/textTotal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_20"
            />
        <TextView
            android:id="@+id/textPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:textColor="#666666"
            android:text="0.00"
            android:layout_toRightOf="@id/textFlag"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_20"
            />

<ImageView
    android:id="@+id/imageConform"
    android:layout_width="@dimen/dp_50"
    android:layout_height="@dimen/dp_50"
    android:src="@drawable/group_2"
    android:layout_toRightOf="@id/textPrice"
    android:layout_marginLeft="@dimen/dp_50"
     android:layout_centerVertical="true"
    />
<ImageView
    android:id="@+id/imageCancel"
    android:layout_width="@dimen/dp_38"
    android:layout_height="@dimen/dp_38"
    android:src="@drawable/group_3"
    android:layout_toRightOf="@id/imageConform"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_centerVertical="true"
    />
    </RelativeLayout>
</RelativeLayout>
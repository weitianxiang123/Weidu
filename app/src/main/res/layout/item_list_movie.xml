<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_312"
    android:layout_height="@dimen/dp_123"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dp_34"

    android:clipChildren="false"
    >
 <LinearLayout
     android:layout_width="@dimen/dp_312"
     android:layout_height="@dimen/dp_123"
     android:orientation="horizontal"
     android:background="@drawable/login_bg"
     android:layout_marginTop="@dimen/dp_34"
     >

     <com.facebook.drawee.view.SimpleDraweeView
         android:id="@+id/imageSimpleDrawee"
         android:layout_width="@dimen/dp_103"
         android:layout_height="@dimen/dp_128"
         android:background="#f0f"
         android:layout_marginLeft="@dimen/dp_10"
         android:layout_marginTop="@dimen/dp_f20"
         />
     <LinearLayout
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:padding="@dimen/dp_10"
         >
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="@dimen/dp_10"
             >
             <TextView
                 android:id="@+id/textName"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="#ffffff"
                 android:textSize="@dimen/sp_14"
                 android:text="name"
                 />
             <ImageView
                 android:id="@+id/imageHard"
                 android:layout_width="@dimen/dp_24"
                 android:layout_height="@dimen/dp_24"
                 android:layout_alignParentRight="true"
                 android:src="@drawable/com_icon_collection_default"
                 />

         </RelativeLayout>

         <TextView
             android:id="@+id/textJJ"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:textSize="@dimen/sp_12"
             android:textColor="#ffffff"
             android:layout_weight="1"
             android:ellipsize="end"
             android:text="哈哈哈"
             />
     </LinearLayout>

 </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:id="@+id/cancle_layout"
    tools:context=".activity.RemindActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:id="@+id/remind_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购票信息"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/remind_pushTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="time"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:id="@+id/remind_content"
                android:layout_width="@dimen/dp_259"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="asdasd"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/remind_status"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_remind_text_bg"
                android:text="1"
                android:visibility="gone"
                 />
        </RelativeLayout>

        <include layout="@layout/include_view_layout" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<com.facebook.drawee.view.SimpleDraweeView
    android:id="@+id/imagePhoto"
    android:layout_width="@dimen/dp_111"
    android:layout_height="@dimen/dp_149"
    android:layout_marginTop="@dimen/dp_f30"
    android:layout_marginLeft="@dimen/dp_24" />

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@id/imagePhoto"
            android:orientation="vertical"
            >
            <!--类型-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类型："
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/textType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="哈哈"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <!--导演-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="导演："
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/textDirect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="哈哈"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <!--时长-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时长："
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/textTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="哈哈"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <!--产地-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产地："
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/textFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="哈哈"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textEasy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:layout_below="@id/imagePhoto"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_20"
            android:textColor="#333333"
            android:text="剧情简介"
            />

        <View
            android:id="@+id/viewEasy"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_below="@id/textEasy"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_3"
            android:background="@drawable/shape_e8175e_440a33"
            ></View>

        <TextView
            android:id="@+id/textEasyText"
            android:layout_below="@id/viewEasy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_24"
            android:maxLines="4"
            />


        <TextView
            android:id="@+id/textActor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textEasyText"
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_24"
            android:textColor="#333333"
            android:text="演职人员"
            />

        <View
            android:id="@+id/viewActor"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_below="@id/textActor"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_3"
            android:background="@drawable/shape_e8175e_440a33"
            ></View>

        <TextView
            android:id="@+id/textActorText"
            android:layout_below="@id/viewActor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_24"
            android:maxLines="4"
            />


</RelativeLayout>
